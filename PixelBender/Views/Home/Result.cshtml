<head>
    <title>Your Processed Photo!</title>
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@500&display=swap" rel="stylesheet">
</head>
<style>
    ::-webkit-scrollbar {
        width: 6px;
    }

    ::-webkit-scrollbar-track {
        background-color: #f1f1f1;
    }

    ::-webkit-scrollbar-thumb {
        background-color: #888;
    }

        ::-webkit-scrollbar-thumb:hover {
            background-color: #555;
        }

    body {
        background-image: url(../../Photos/BG.png);
        background-size: cover;
        font-family: 'Poppins', sans-serif;
    }

    .upload-form {
        background-color: white;
        padding: 40px;
        margin: 0 auto; /* Center the form */
        border-radius: 25px;
        box-shadow: rgba(17, 12, 46, 0.08) 0px 48px 100px 0px;
        width: 490px;
        height: 560px;
    }

    #thebutton {
        background-color: black;
        border: none;
        border-radius: 7px;
        cursor: pointer;
        width: 100%;
        font-size: 25px;
        height: 50px;
        transition: 0.2s;
    }

        #thebutton:hover {
            background-color: darkorange;
            box-shadow: 0px 8px 24px rgba(0, 191, 255, 0.1);
        }

    .custom-input {
        border-radius: 6px;
        padding: 8px;
        box-shadow: rgba(149, 157, 165, 0.1) 0px 8px 24px;
        margin-bottom: 28px;
        border: 2px solid transparent; /* Use border instead of border-color */
    }

        .custom-input:focus {
            outline: none;
            box-shadow: none;
            border-color: darkorange;
        }


    .result-section {
        margin: 50px auto;
        text-align: center;
    }

    .result-heading {
        text-align: center;
        font-size: 24px;
        margin-bottom: 20px;
    }

    .alert {
        margin-bottom: 20px;
        padding: 10px;
        font-size: 18px;
        background-color: #f8d7da;
        color: #721c24;
        border: 1px solid #f5c6cb;
        border-radius: 4px;
    }

    .photo-container {
        display: flex;
        justify-content: center;
        align-items: center;
        margin-top: 30px;
    }
</style>

<div class="d-flex justify-content-center align-items-center" style="margin-top:50px;margin-bottom:120px;">
    @using (Html.BeginForm("DownloadPhoto", "Home", FormMethod.Post, new { enctype = "multipart/form-data", @class = "upload-form" }))
    {
        <form method="post">
            <h2 class="result-heading">Your Processed Photo <span style="position:relative;bottom:3px;"><img src="~/Photos/smileface.png" height="40" width="40" /></span></h2>

            @if (ViewBag.Error != null)
            {
                <div class="alert alert-danger">@ViewBag.Error</div>
            }
            else
            {
                <div class="photo-container">
                    <img src="@Url.Content("~/Photos/" + ViewBag.ProcessedPhoto)" alt="Processed Photo" class="result-image" height="280" />
                </div>
            }
            <a href="@Url.Action("DownloadPhoto", "Home", new { fileName = ViewBag.ProcessedPhoto })" class="btn btn-primary" id="thebutton" style="margin-top: 50px;">
                Download
            </a>
        </form>
    }
</div>